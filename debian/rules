# Modified to be a prototype for debmake by Christoph Lameter <clameter@debian.org>

package=gimp

build:
	$(checkdir)
	./configure
	$(MAKE) PROGRAM=gimp-dynamic DESIRED_MOTIF_LIB=-lXm
	$(MAKE) PROGRAM=gimp-static DESIRED_MOTIF_LIB=/usr/X11R6/lib/libXm.a
	touch build

clean:
	$(checkdir)
	-rm -f build
	-make clean
	-rm -f `find . -name "*~"`
	-rm -rf debian/tmp debian/*/tmp debian/files* core

binary-indep:	checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:	checkroot build
	$(checkdir)
	-rm -rf debian/tmp debian/*/tmp
	install -d debian/tmp
	cd debian/tmp;install -d `cat ../dirs`

	$(MAKE) -f debian/rules install-common-files

	install -o root -g root -m 755 -s app/gimp-dynamic \
	  debian/tmp/usr/X11R6/bin/gimp
	debstd CHANGES README 

	dpkg-gencontrol -pgimp-dmotif
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg --build debian/tmp ..

	install -o root -g root -m 755 -s app/gimp-static \
	  debian/tmp/usr/X11R6/bin/gimp
	debstd CHANGES README 
	mv debian/tmp/usr/lib/menu/gimp-dmotif debian/tmp/usr/lib/menu/gimp-smotif
	dpkg-gencontrol -pgimp-smotif
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg --build debian/tmp ..

# Do not invoke this rule directly!
install-common-files:
	install -d debian/tmp/usr/lib/gimp/brushes
	install -o root -g root -m 644 brushes/* debian/tmp/usr/lib/gimp/brushes
	install -d debian/tmp/usr/lib/gimp/plug-ins
	install -o root -g root -m 755 \
		`find plug-ins -perm +a+x -type f` \
		debian/tmp/usr/lib/gimp/plug-ins

	install -d debian/tmp/usr/doc/gimp/examples
	install -o root -g root -m 644 \
		gimprc debian/tmp/usr/doc/gimp/examples/dot.gimprc
	install -d debian/tmp/etc/gimp
	install -o root -g root -m 644 gimprc debian/tmp/etc/gimp
	cd debian/tmp/usr/doc/gimp/examples && \
		perl -pi -e 's?/usr/local/?/usr/?g' \
			dot.gimprc
	cd debian/tmp/etc && \
		perl -pi -e 's?/usr/local/?/usr/?g' \
			gimprc

	install -d debian/tmp/usr/doc/gimp
	install -o root -g root -m 644 \
		README \
		docs/description \
		docs/*.html \
		docs/paint_tools_doc \
    debian/extensions.Debian \
		debian/tmp/usr/doc/gimp	

	install -d debian/tmp/usr/info
	install -o root -g root -m 644 docs/gimp debian/tmp/usr/info/gimp.info
#	gzip -9v debian/tmp/usr/info/*

#binary:		checkroot build
#	$(MAKE) -f debian.rules \
#		package=$(base-package)-smotif linkage=statically motifyesno="don't " \
#    assemble-binary
#	mv debian-tmp.deb ..
#	dpkg-name ../debian-tmp.deb
#	#mv debian-tmp.deb ../$(base-package)-smotif-$(version)-$(debian).$(arch).deb


#binary-dynamic: checkroot build-dynamic
#	$(MAKE) -f debian.rules \
#		package=$(base-package)-dmotif linkage=dynamically motifyesno="" \
#    assemble-binary
#	mv debian-tmp.deb ..
#	dpkg-name ../debian-tmp.deb
#	#mv debian-tmp.deb ../$(base-package)-dmotif-$(version)-$(debian).$(arch).deb




define checkdir
	test -f debian/rules
endef

# Below here is fairly generic really

binary:		binary-indep binary-arch

source diff:
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
